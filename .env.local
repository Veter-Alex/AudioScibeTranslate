# Локальные настройки для разработки

# =====================
# PostgreSQL Settings (Local)
# =====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=audioscribetranslate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =====================
# Redis Settings (Local)
# =====================
REDIS_URL=redis://localhost:6379/0

# =====================
# Celery Settings (Local)
# =====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =====================
# Worker Autoscaling (Local)
# =====================
MEMORY_THRESHOLD_GB=4
MAX_WORKERS=3
MIN_WORKERS=1
MEMORY_CHECK_INTERVAL=30
WORKER_MEMORY_LIMIT_GB=2
ENABLE_AUTO_SCALING=true

# =====================
# Security
# =====================
SECRET_KEY=your_secret_key

# =====================
# Whisper & ML Models
# =====================
WHISPER_MODELS=base,small,medium,large

# =====================
# Default Admin
# =====================
ADMIN_NAME=admin
ADMIN_PASSWORD=admin

# =====================
# pgAdmin Settings
# =====================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
