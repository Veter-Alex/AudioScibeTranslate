
# =====================
# Настройки PostgreSQL
# =====================
POSTGRES_HOST=db           # Хост базы данных PostgreSQL
POSTGRES_PORT=5432                # Порт PostgreSQL
POSTGRES_DB=audioscribetranslate  # Имя базы данных
POSTGRES_USER=postgres            # Пользователь БД
POSTGRES_PASSWORD=postgres        # Пароль пользователя БД

# =====================
# Настройки Redis
# =====================
REDIS_URL=redis://redis:6379/0    # URL для подключения к Redis

# =====================
# Настройки Celery
# =====================
CELERY_BROKER_URL=redis://redis:6379/0      # Брокер задач Celery (обычно Redis)
CELERY_RESULT_BACKEND=redis://redis:6379/0  # Хранилище результатов Celery

# =====================
# Настройки динамического масштабирования воркеров
# =====================
MEMORY_THRESHOLD_GB=8           # Минимальный размер свободной памяти для запуска дополнительных воркеров (в ГБ)
MAX_WORKERS=6                   # Максимальное количество воркеров (для Dell R620: 8 CPU - 2 резерв)
MIN_WORKERS=1                   # Минимальное количество воркеров
MEMORY_CHECK_INTERVAL=30        # Интервал проверки памяти в секундах
WORKER_MEMORY_LIMIT_GB=4        # Ограничение памяти на один воркер (в ГБ)
ENABLE_AUTO_SCALING=true        # Включить автомасштабирование (true/false)

# =====================
# Секретные ключи и безопасность
# =====================
SECRET_KEY=your_secret_key    # Секретный ключ приложения (JWT, подписи и т.д.)

# =====================
# Whisper и ML-модели
# =====================
WHISPER_MODELS=base,small,medium,large   # Список поддерживаемых моделей Whisper (через запятую)

# =====================
# Администратор по умолчанию
# =====================
ADMIN_NAME=admin             # Имя пользователя-администратора, создаваемого при запуске
ADMIN_PASSWORD=admin         # Пароль администратора

# =====================
# Настройки pgAdmin (GUI для PostgreSQL)
# =====================
PGADMIN_DEFAULT_EMAIL=admin@admin.com   # Email для входа в pgAdmin
PGADMIN_DEFAULT_PASSWORD=admin          # Пароль для входа в pgAdmin
