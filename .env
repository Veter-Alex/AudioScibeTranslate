
# =====================
# Настройки PostgreSQL
# =====================

# =====================
# PostgreSQL Settings
# =====================
# Host for PostgreSQL database
POSTGRES_HOST=db
# Port for PostgreSQL
POSTGRES_PORT=5432
# Database name
POSTGRES_DB=audioscribetranslate
# Database user
POSTGRES_USER=postgres
# Database password
POSTGRES_PASSWORD=postgres

# =====================
# Redis Settings
# =====================
# Redis connection URL
REDIS_URL=redis://redis:6379/0

# =====================
# Celery Settings
# =====================
# Celery broker (usually Redis)
CELERY_BROKER_URL=redis://redis:6379/0
# Celery result backend
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =====================
# Worker Autoscaling
# =====================
# Minimum free memory (GB) for scaling
MEMORY_THRESHOLD_GB=8
# Maximum number of workers
MAX_WORKERS=6
# Minimum number of workers
MIN_WORKERS=1
# Memory check interval (seconds)
MEMORY_CHECK_INTERVAL=30
# Memory limit per worker (GB)

# Enable autoscaling (true/false)
ENABLE_AUTO_SCALING=true

# =====================
# Security
# =====================
# Application secret key
SECRET_KEY=your_secret_key

# =====================
# Whisper & ML Models
# =====================
# Supported Whisper models (comma separated)
WHISPER_MODELS=base,small,medium,large

# =====================
# Default Admin
# =====================
# Default admin username
ADMIN_NAME=admin
# Default admin password
ADMIN_PASSWORD=admin

# =====================
# pgAdmin Settings
# =====================
# pgAdmin login email
PGADMIN_DEFAULT_EMAIL=admin@admin.com
# pgAdmin login password
PGADMIN_DEFAULT_PASSWORD=admin
