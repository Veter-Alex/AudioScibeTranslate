
# =====================
# PostgreSQL Settings (Production)
# =====================
POSTGRES_HOST=your-production-db-host
POSTGRES_PORT=5432
POSTGRES_DB=audioscribetranslate_prod
POSTGRES_USER=audioscribe_user
POSTGRES_PASSWORD=strong_password_here

# =====================
# Redis Settings (Production)
# =====================
REDIS_URL=redis://your-redis-host:6379/0

# =====================
# Celery Settings (Production)
# =====================
CELERY_BROKER_URL=redis://your-redis-host:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/0

# =====================
# Worker Autoscaling (Production)
# =====================
MEMORY_THRESHOLD_GB=12
MAX_WORKERS=8
MIN_WORKERS=2
MEMORY_CHECK_INTERVAL=20
WORKER_MEMORY_LIMIT_GB=6
ENABLE_AUTO_SCALING=true

# =====================
# Security
# =====================
SECRET_KEY=super_strong_secret_key_for_production

# =====================
# Whisper & ML Models
# =====================
WHISPER_MODELS=base,small,medium,large,large-v2,large-v3

# =====================
# Default Admin
# =====================
ADMIN_NAME=admin
ADMIN_PASSWORD=strong_admin_password

# =====================
# pgAdmin Settings (disabled in production)
# =====================
PGADMIN_DEFAULT_EMAIL=admin@yourcompany.com
PGADMIN_DEFAULT_PASSWORD=strong_pgadmin_password
