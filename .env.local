# Локальные настройки для разработки

# =====================
# PostgreSQL Settings (Local)
# =====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=audioscribetranslate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =====================
# Redis Settings (Local)
# =====================
REDIS_URL=redis://localhost:6379/0

# =====================
# Celery Settings (Local)
# =====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =====================
# Worker Settings (Local)
# =====================
MAX_WORKERS=3
WORKER_MEMORY_LIMIT_GB=2

# =====================
# Processing Chains (Local)
# =====================
MIN_FREE_MEMORY_GB=2
ENABLE_PROCESSING_CHAINS=true
CHAIN_QUEUE_CHECK_INTERVAL=10

# =====================
# Security
# =====================
SECRET_KEY=your_secret_key

# =====================
# Whisper & ML Models
# =====================
WHISPER_MODELS=base,small,medium,large

# =====================
# Default Admin
# =====================
ADMIN_NAME=admin
ADMIN_PASSWORD=admin

# =====================
# pgAdmin Settings
# =====================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
